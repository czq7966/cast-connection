{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/dts",
    "moduleResolution": "node",      
    "experimentalDecorators": true,
    "strict": false,
    "jsx": "react",
    // "allowJs": true,
    // "noImplicitThis": true,
    "target": "es5",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "dom",
      "es5"      
    ]
  },
  "exclude": [
    "node_modules",
    "gulp",
    "*.js",
    "dist"
  ]
}
